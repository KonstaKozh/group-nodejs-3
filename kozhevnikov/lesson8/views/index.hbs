<h2>Перечень задач</h2>

{{#if tasks.length}}
    <ul>
        {{#each tasks}}
            <li class="task">
                <form action="/complete" method="POST">
                    <label>
                        {{#if completed}}
                            <input type="checkbox" checked name="completed">
                            <span class="completed">{{title}}</span>
                        {{else}}
                            <input type="checkbox" name="completed">
                            <span>{{title}}</span>
                        {{/if}}
                        <div>
                            <input type="hidden" value="{{_id}}" name="id">
                            <button class="btn btn-small" type="submit">Сохранить</button>
                        </div>
                    </label>
                </form>
<!--                <form action="/remove" method="POST">-->
<!--                    <input type="hidden" value="{{_id}}" name="id">-->
<!--                    <button class="btn btn-small" type="submit">Удалить</button>-->
<!--                </form>-->
            </li>
        {{/each}}
    </ul>
{{else}}
    <p>Нет задач!</p>
{{/if}}